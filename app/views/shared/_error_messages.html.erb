<% if obj.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <!-- The form containers <%= pluralize(obj.errors.count, "error") %>. -->
      Correct the following errors and try again.
    </div>
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>