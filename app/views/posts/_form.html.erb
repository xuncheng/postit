<%= simple_form_for @post, defaults: { error: false } do |f| %>
  <%= render 'shared/error_messages', target: @post %>
  <%= f.input :title, input_html: { class: "input-large" } %>
  <%= f.input :url, label: 'URL', input_html: { class: "input-large" }, hint: "Don't forget http://" %>
  <%= f.input :description, input_html: { class: "input-large" } %>
  <%= f.association :categories, as: :check_boxes %>
  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
