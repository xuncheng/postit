<header class="navbar navbar-fixed-top">
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <ul class="nav">
          <li><%= link_to "Postit!", root_path, :class => 'brand' %></li>
          <li><%= link_to 'All Posts', posts_path %></li>
        </ul>
        <div class="btn-group nav_item">
          <a href="#" class="btn btn-small dropdown-toggle" data-toggle="dropdown">Categories<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% Category.all.each do |category| %>
              <li><%= link_to category.name, category %></li>
            <% end %>
            <li class="divider"></li>
            <li><%= link_to "<i class='icon-plus'></i> New Category".html_safe, new_category_path %></li>
          </ul>
        </div>
        <% if signed_in? %>
          <div class="nav_item">
            <%= link_to 'New Post', new_post_path, class: "btn btn-success btn-small" %>
          </div>
        <% end %>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.username %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Setting", '#' %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Sign up', signup_path %></li>
            <li><%= link_to 'Sign in', signin_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</header>
